{
  "name": "@yamdan/bls12381-key-pair",
  "version": "0.7.11",
  "description": "**Experimental** (do not use in production): Based on MATTR's [bls12381-key-pair](https://github.com/mattrglobal/bls12381-key-pair)",
  "homepage": "https://github.com/yamdan/bls12381-key-pair",
  "author": "yamdan",
  "repository": "https://github.com/yamdan/bls12381-key-pair",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib"
  ],
  "private": false,
  "engines": {
    "node": ">=11.0.0"
  },
  "scripts": {
    "test:node": "BBS_SIGNATURES_MODE=\"NODE_JS_MODULE\" jest",
    "test:wasm": "BBS_SIGNATURES_MODE=\"WASM\" jest",
    "build": "tsc --pretty",
    "clean": "rm -rf lib/",
    "format": "prettier --write \"**/*.ts\" \"**/*.md\"  \"!**/lib/**\"",
    "lint": "eslint . --ext .ts --color --format=table",
    "lint:fix": "yarn lint --fix",
    "pre-pr": "yarn clean && yarn format && yarn lint:fix && yarn build && yarn test",
    "publish:unstable": "./scripts/publish_unstable.sh",
    "publish:release": "./scripts/publish.sh",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "version:release": "yarn version --minor --message \"chore(release): publish\""
  },
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@types/bs58": "4.0.1",
    "@types/jest": "27.0.2",
    "@types/node": "16.10.1",
    "@typescript-eslint/eslint-plugin": "4.31.2",
    "@typescript-eslint/parser": "4.31.2",
    "conventional-changelog": "3.1.24",
    "conventional-changelog-cli": "2.1.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "7.0.2",
    "jest": "27.2.2",
    "prettier": "2.4.1",
    "pretty-quick": "3.1.1",
    "ts-jest": "27.0.5",
    "ts-node": "10.2.1",
    "typescript": "4.4.3"
  },
  "dependencies": {
    "@yamdan/bbs-signatures": "0.6.11",
    "bs58": "4.0.1",
    "rfc4648": "1.5.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "[[ -n $HUSKY_BYPASS ]] || pretty-quick --staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
